[module/battery]
type = internal/battery

full-at = 95

; ls -l /sys/class/power_supply
battery = BAT0
adapter = AC

; polling
poll-interval = 5

; Charging
format-charging = <animation-charging>  <label-charging>
label-charging = %percentage%% 

; discharge
format-discharging = <ramp-capacity>  <label-discharging>
label-discharging = %percentage%% 

; Ramp
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Charging animation
animation-charging-0 = 
animation-charging-0-foreground = ${nordcolors.nord11}
animation-charging-1 = 
animation-charging-1-foreground = ${nordcolors.nord12}
animation-charging-2 = 
animation-charging-2-foreground = ${nordcolors.nord13}
animation-charging-3 = 
animation-charging-3-foreground = ${nordcolors.nord14}
animation-charging-4 = 
animation-charging-4-foreground = ${nordcolors.nord15}
; Framerate in milliseconds
animation-charging-framerate = 750

[module/bspwm]
type = internal/bspwm


; workspaces
ws-icon-0 = terminal;
ws-icon-1 = code;
ws-icon-2 = browser;龜
ws-icon-3 = comms;
ws-icon-4 = misc;
ws-icon-default = 

enable-click = true

pin-workspaces = true

; Display format
format = <label-state> 

; Focused
label-focused = %icon%
label-focused-foreground = ${nordcolors.nord7}
label-focused-background = ${nordcolors.nord3} 
label-focused-overline = ${nordcolors.nord9}

; Occupied
label-occupied = %icon%
label-occupied-foreground = ${nordcolors.nord10}
label-occupied-background = ${nordcolors.nord2}

; Urgent
label-urgent = %icon%
label-urgent-foreground = ${nordcolors.nord11}

; Label for empty workspaces
label-empty = %icon%

; Seperator
label-focused-padding = 2
label-occupied-padding = 2
label-empty-padding = 2

